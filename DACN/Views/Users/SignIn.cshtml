
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}
<!-- Sing in  Form -->
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/Asset/signin_signup/images/signin-image.jpg" alt="sing up image"></figure>
                
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign up</h2>
                @using (Html.BeginForm())
                {
                    <br />
                    <div class="sub-w3l" style="color:red">
                        <h6>@ViewData["Error"]</h6>
                    </div>
                    <div class="form-group">
                        <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="username" placeholder="Your Name" />
                    </div>
                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="password" placeholder="Password" />
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Sumbit" />
                    </div>
                }
                    <div class="social-login">
                        <a class="social-label" href="@Url.Action("Index","Home")" style="color:red">Home</a>
                        <a href="@Url.Action("SignUp","Users")" class="signup-image-link" style="font-weight:bold;">Create an account</a>
                    </div>
                </div>
        </div>
    </div>
</section>
