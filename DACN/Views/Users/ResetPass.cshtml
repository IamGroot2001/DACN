
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}


<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Account Information</h2>
                @using (Html.BeginForm("ResetPass", "Users", FormMethod.Post, htmlAttributes: new { @class = "user" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <br />
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user"
                               name="token" hidden>
                    </div>

                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" name="password" placeholder="Mật khẩu mới" />
                    </div>
                    <div style="color:red; font-size:0.87rem; padding-left:1rem; padding-top:0.2rem;text-align:center;">@ViewBag.Pass</div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" name="repassword" placeholder="Nhập lại mật khẩu mới" />
                    </div>
                    <div style="color:red; font-size:0.87rem; padding-left:1rem; padding-top:0.2rem;text-align:center;">@ViewBag.RePass</div>
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Sumbit" />
                    </div>
                }
            </div>
            <div class="signup-image">
                <figure><img src="~/Asset/signin_signup/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="@Url.Action("Index","Home")" class="signup-image-link">Home</a>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        document.getElementsByName('token')[0].value = urlParams.get('token')
    </script>
}