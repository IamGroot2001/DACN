
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                @using (Html.BeginForm())
                {
                    <div class="sub-w3l" style="color:red">
                        <h6>@ViewData["Error"]</h6>
                    </div>
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-key"></i></label>
                        <input type="text" name="taikhoan" placeholder="Name your account" required />
                    </div>
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="name" placeholder="Your Name" required />
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" name="email"placeholder="Your Email" required />
                    </div>
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-phone"></i></label>
                        <input type="text" name="phone" placeholder="Phone Number" required />
                    </div>
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account-box "></i></label>
                        <input type="text" name="address"  placeholder="Address" required />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="pass"  placeholder="Password" required />
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" name="re_pass" placeholder="Repeat your password" required />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Sumbit" />
                    </div>
                }
            </div>
            <div class="signup-image">
                <figure><img src="~/Asset/signin_signup/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="@Url.Action("SignIn","Users")" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>
