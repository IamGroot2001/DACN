
@{
    ViewBag.Title = "NotifForm";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}

<section class="signup">

    <div class="container">
        <div class="signup-content"></div>
        <div class="signup-form">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">@ViewBag.TitleH</h1>
                    <p class="mb-4">
                        @ViewBag.Msg
                    </p>
                </div>
                <hr>
                <div class="signup-image">
                    <figure><img src="~/Asset/signin_signup/images/signup-image.jpg" alt="sing up image"></figure>
                </div>
                <a href="@Url.Action("SignIn","Users")" class="btn btn-primary btn-user btn-block">Quay Lại Trang Đăng Nhập</a>
                <hr>
            </div>
        </div>
        
    </div>
</section>