@model IEnumerable<DACN.Models.SAN_PHAM>
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/Shop_Layout.cshtml";
}
@foreach(var item in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="product__item">
            <div class="product__item__pic set-bg" data-setbg="~/Asset/img/product/@item.HinhAnh">
                <img src="~/Asset/img/product/@item.HinhAnh" />
                <a herf="#"></a>
            </div>
            <div>
                <h6><span style="color: lightslategray"><b>@item.TenSP</b></span> &emsp;&emsp;&emsp;&emsp;&emsp;   @*<img src="~/Asset/img/icon/star.png" style="height:20px;width:20px">*@</h6>
                <h5>@String.Format("{0:0,0}", item.Gia) <span style="color: lightsalmon">VNĐ</span></h5>
                <form method="get" action="@Url.Action("ProductDetail","Home", new { id = item.MaSP })">
                    <button style="border-radius: 12px; background-color: gray; border: 2px solid gray;" type="submit"><span style="color: white">Xem Chi Tiết</span></button>
                </form>
            </div>
            @*<div class="product__item__text">
                <h6>@item.TenSP</h6>
                <a href="#" class="add-cart">Thêm Vào Giỏ Hàng</a>

                <h5>@item.Gia VNĐ</h5>
                <form method="get" action="@Url.Action("ProductDetail","Home", new { id = item.MaSP })">
                    <button type="submit">Xem Chi Tiết</button>
                </form>
            </div>*@
        </div>
    </div>
}


