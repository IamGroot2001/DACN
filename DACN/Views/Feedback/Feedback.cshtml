@model IEnumerable<DACN.Models.FEEDBACK>

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Feedback</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Phản hồi khách hàng
        </div>
        <div class="card-body">
            <table id="datatablesFeedback" class="table-responsive">
                <thead>
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Email</th>
                        <th>Nội dung phản hồi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td style="min-width:200px">@Html.DisplayFor(modelItem => item.Ten)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.NoiDung)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

