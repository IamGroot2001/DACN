@model DACN.Models.SAN_PHAM

@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Sửa sản phẩm</h1>

    <div class="card mb-4">

        @using (Html.BeginForm("EditProduct", "Manage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaSP)
                            <tr>
                                <th>Mã sản phẩm</th>
                                <td>
                                    <div class="col-md-10">
                                        <div style="">@Model.MaSP</div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>Hình</th>
                                <td>
                                    <div class="col-md-10">
                                        <input type="file" name="img"/>
                                        <img src="~/Assets/img/Clothes/@Html.DisplayFor(modelItem => Model.HinhAnh)" class="img-thumbnail"  alt="@Model.TenSP" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>Giá</th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                         
                            <tr>
                                <th>Mô tả</th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                             
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th>Loại</th>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DropDownList("Loai")
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <input type="submit" class="btn-fluid btn btn-outline-success" value="Save" />
        }
    </div>
    <a class="btn btn-outline-dark" href="@Url.Action("Product","Manage")">Trở về</a>
</div>

