@model IEnumerable<DACN.Models.KHACH_HANG>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="my-4">Quản lý khách hàng</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table "></i>
            Khách hàng
        </div>
        <div class="card-body">
            <table id="datatablesCustomer" class="table-responsive">
                <thead>
                    <tr>
                        <th style="min-width:180px">Tên khách hàng</th>
                        <th style="min-width:100px">Email</th>
                        <th style="min-width:150px">Số điện thoại</th>
                        <th style="min-width:180px">Địa chỉ</th>
                        <th style="min-width:180px">Tên đăng nhập</th>
                        <th style="min-width:150px">Mật khẩu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.HoTenKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.EmailKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.SdtKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChiKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.TaiKhoanKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.MatKhauKH)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

