@model IEnumerable<DACN.Models.SAN_PHAM>
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
        <div class="product__item">
            <div class="product__item__pic set-bg">
                <img src="~/Asset/img/product/@item.HinhAnh" />
                <span class="label">Bán Chạy</span>
            </div>
            <div class="product__item">
                <h6><span style="color: lightslategray"><b>@item.TenSP</b></span></h6>
                <h5>@item.Gia <span style="color: lightsalmon">VNĐ</span></h5>
                <form method="get" action="@Url.Action("ProductDetail","Home", new { id = item.MaSP })">
                    <button style="border-radius: 12px; background-color: gray; border: 2px solid gray;" type="submit"><span style="color: white">Xem Chi Tiết</span></button>
                </form>
            </div>
        </div>
    </div>
}

